@import "theme_variables";

#products,
#pagenotfound {
  #main {
    .page-header {
      margin: 2rem 0 3rem;
    }
    .page-content {
      margin-bottom: 10rem;
    }
  }
  .page-not-found {
    @include box-shadow(2px 2px 11px 0px rgba(0, 0, 0, 0.1));
    background: white;
    padding: 1rem;
    font-size: $font-size-sm;
    color: $gray-dark;
    max-width: 570px;
    margin: 0 auto;
    h4 {
      font-size: $base-font-size;
      font-weight: 700;
      margin: 0.5rem 0 1rem;
    }
    .search-widget {
      float: none;
      input {
        width: 100%;
      }
    }
  }
}
