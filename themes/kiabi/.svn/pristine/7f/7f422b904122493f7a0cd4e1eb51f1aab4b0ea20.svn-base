/* Product List*/
.product_list {
    &.list{
        .ajax_block_product{
            width: 100%;
            @media (min-width: 992px) {
                .leo-more-info {
                    @include rtl-left(0);
                }
            }
        }
        .thumbnail-container{
            @include rtl-text-align-left();
            &:after {
                content: "";
                display: block;
                clear: both;
            }
            .product-image{
                @include rtl-float-left();
                @include make-col(4);
                text-align: center;
            }
            .product-meta{
                position: relative;
                overflow: hidden;
                @include make-col(8);
                @include rtl-text-align-left();
                @include rtl-padding-left(20px);
                transform:none;
            }
            @media (max-width: 490px) {
                @include display(flex);
                @include flex-direction(column);
                &>div {
                    width: 100%!important;
                }
            }
            .product-description-short{
                display: inline-block;
            }
            @media (min-width: 992px) {
                
            }
            &:hover {
                .leo-more-info {
                    @include rtl-left(-85px);
                }
            }
        }
    }
    &.grid{
        .ajax_block_product{
            clear: none;
            @media (min-width: 1200px) {
                &.first-in-line{
                    clear: both;
                }
            }
            @media  (min-width: 992px) and (max-width: 1199px) {
                &:nth-child(3n+1){
                    clear: both;
                }
            }
            @media (max-width: 991px) and (min-width: 768px) {
                &:nth-child(3n+1){
                    clear: both;
                }
            }
            @media (max-width: 767px) and (min-width: 481px) {
                width: 50%;
                &:nth-child(2n+1){
                    clear: both;
                }
            }
        }
    }
}

/* type button */
/*Type 1 */
@mixin leo-button-1 {
    .quick-view,
    .btn-product{
        background:$product-button-bg;
        display: block;
        width: 100%;
        height: 44px;
        line-height: 44px;
        text-align: center;
        padding: 0 10px;
        color: $product-button-color;
        border: 0;
        font-size: 11px;
        text-transform: uppercase;
        border-radius: 0;
        margin: 3px 0 0;
        @media (max-width: 991px) {
            letter-spacing: 0;
        }
        &:hover,
        &.added{ 
            color: $theme-color-default;
        }
        i {
            font-size: 14px;
        }
    }
    @media (max-width: 991px) and (min-width: 768px) {
        padding: 3px 1.5px;
    }
}

/*tyle button 2 */
@mixin leo-button-2 {
    .btn-product,
    .quick-view{
        pointer-events: auto;
        width: 40px;
        height: 40px;
        @include box-shadow(1px 1px 1px rgba(0,0,0,0.1));
        border: 0;
        line-height: 40px;
        text-align: center;
        padding: 0;
        background: $product-button-bg;
        border-radius: 50%;
        @include rtl-margin(0, 10px, 0, 0);
        display: block;
        color: $product-button-color;
        transition: all .4s;
        position: relative;
        @media (max-width: 1199px)  and (min-width: 480px) {
            @include rtl-margin(0, 5px, 0, 0);                
        }
        &.added{
            color: $theme-color-default;
        }
        &:hover{
            background: $product-button-hover-bg;
            color:$product-button-hover-color;
            transform: translateY(-3px);
            i {
                color: #fff;
            }
        }
        i {
            display: inline-block;
            vertical-align: middle;
            margin: auto;
            color: #000;
        }
        .leo-wishlist-bt-content,
        .leo-bt-cart-content,
        .leo-quickview-bt-content{
            @include display(flex);
            @include align-items(center);
            margin: auto;
            height: 100%;
        }
        span span{
            position: absolute;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%);
            margin-bottom: 7px;
            color: $product-button-hover-color;
            background:$product-button-hover-bg;
            font-size: 8px;
            padding: 5px 10px 3px;
            transition: all .4s;
            opacity: 0;
            visibility: hidden;
            line-height: 15px;
            white-space: nowrap;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 300;
            border-radius: 11px;
            pointer-events: none;
            &:before{
                content: "";
                border: 5px solid transparent;
                border-top-color: $product-button-hover-bg;
                position: absolute;
                top: 100%;
                left: 50%;
                margin-left: -5px;

            }
        }
        &:hover{
            span span{
                @include opacity(1);
                visibility: visible;
            }
        }
    }
}

/*tyle button 3 */
@mixin leo-button-3 {
    .btn-product , .quick-view{
        width: 100%;
        height: 35px;
        line-height: 35px;
        border: 0;
        padding: 0;
        border-radius: 0;
        background:#111;
        color: #fff;
        display: block;
        text-align: center;
        position: relative;
        @media (max-width: 991px) {
            letter-spacing: 0;
        }
        &:hover{
            background: $theme-color-default;
            color: #fff;
        }
        i {
            display: none;
        }
        &.add-to-cart{
            line-height: 20px;
            @media (max-width: 400px) {
                span span{
                    display: none;
                }
                i{
                    display: inline-block;
                    margin: 0;
                }
            }                    
        }
    }
    &>div{
        width: 40px;
        @include rtl-float-left();
        @include rtl-margin(0,0,0,1px);
        &.button-container{
            margin: 0 !important;
        }
    }
    .btn-product:not(.add-to-cart), .quick-view{
        span span{
            position: absolute;
            bottom: 100%;
            @include rtl-right(0px);
            margin-bottom: 7px;
            color: #fff;
            background: #000;
            font-size: 8px;
            padding: 2px 10px;
            line-height: 16px;
            transition: all .4s;
            opacity: 0;
            visibility: hidden;
            white-space: nowrap;
            text-transform: uppercase;
            &:before{
                content: "";
                border: 5px solid transparent;
                border-top-color: #000;
                position: absolute;
                top: 100%;
                @include rtl-right(15px);
            }
        }
        &:hover{
            span span{
                opacity: 1;
                visibility: visible;
            }
        }
        i{
            display: inline-block;
            margin: 0;
            color: $white;
        }
    }
}

@media (min-width: 992px) {
    .ajax_block_product.last-in-line{
        .leo-more-info {
            @include rtl-left(0);
        }
        .thumbnail-container:hover .leo-more-info {
            @include rtl-left(-85px);
        }
    }
}
.owl-item.last{
    .thumbnail-container{
        .leo-more-info{
            @include rtl-left(0);
        }
        &:hover{
            .leo-more-info{
               @include rtl-left(-85px);

            }
        }
    } 
}

/*product-flags */
.product-flags { 
    margin: 0px;
    position: absolute;
    top: 10px;
    @include rtl-left(10px);
    font-size: $product-flags-font-size;
    z-index: 1;
    text-transform: uppercase;
    line-height: 15px;
    pointer-events: none;
    padding: 0;
    &:before, &:after {
        display: none;
    }
    li.product-flag {
        margin: 2px 1px; 
        padding: 2px 5px;
        &.discount {
            display: none;
        }
    }
    .product-flag{
        &.online-only {
            color: $product-flags-online-only-color;
        }
        &.new{
            color: $product-flags-new-color;
            
        }
        &.on-sale{
            color: $product-flags-sale-color;
        }
    }
}

/* thumbnail-container */
.thumbnail-container {
    position: relative;
    @include rtl-margin(0,0,20px,0);
    box-shadow: none;
    padding: 0;
    .product-image {
        position: relative;
        img {
            @media (max-width: 480px) { 
                width: 100%;
            } 
        }
        .product-thumbnail {
            display: inline-block;
            width: 100%;
            text-align: center;
        }
    }
    .full_attribute {
        margin-top: 10px;
    }
    .cssload-speeding-wheel {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        margin: auto;
    }
    /* more image */
    .product-additional , 
    .second-image-style {
        position: absolute;
        top: 0px;
        visibility: hidden;
        left: 0px;
        right: 0;
        bottom: 0;
        @include opacity(0);
        @include transition(all 0.4s);
        transition: all .4s;
        transform: scale3d(0,1,0);
    }
    /* Multi Image Product List */
    .leo-more-info {
      background-color: $white;
      position: absolute;
      z-index: 4000;
      top: 0;
      width: 0;
      height: 276px;
      overflow: hidden;
      @include rtl-right(0px);
      @include rtl-float-left();
      @include rtl-text-align-left();
      @include rtl-padding(15px, $extra-small-space, 15px, $extra-small-space);
      @include box-shadow(0px 5px 20px 0px rgba(0,0,0,0.15));
      @include transition(all 0.5s ease 0s);
      @include opacity(0);
        .thumbs_list {
            overflow: hidden;
            @include rtl-float-left();
            @include size(75px, 255px);
            ul{
              &.thumbs_list_frame {
                list-style-type: none;
                @include rtl-padding-left(0);
              }
            }
            li {
              cursor: pointer;
              @include rtl-float-left();
              @include size(75px, 85px);
              a {
                display: block;
                text-align: center;
                img {
                    max-width: 100%;
                }
              }
            }
          }
        .view_scroll_left,
        .view_scroll_right{
            position: absolute;
            width: 15px;
            margin: auto;
            left: 0px;
            right: 0px;
        }
        .view_scroll_right{
            bottom: -6px;
            margin-bottom: $extra-small-space;
        }
        .view_scroll_left{
            margin-top: $extra-small-space;
            top:-6px;
        }
        @media (max-width: 992px) {
            display: none;
        }
    }
    .slick-dots {
        bottom: 0;
        z-index:999;
    }
    .slick-dotted.slick-slider {
        margin-bottom: 0;
    }
    .discount-percentage {
        position: absolute;
        top:5px;
        color:$product-price-discount-color;
        font-size: 14px;
        letter-spacing: 1px; 
        @include rtl-right(10px);
        background-color:transparent;
        line-height: 15px;
        @include rtl-border-width(0,0,1px,0);
        border-color: $product-price-discount-color;
        padding: 0;
        margin: 0;
    }
    .product-meta{
        @include rtl-padding(20px,0,10px,0);
    }
    //name
    .product-title {
        text-transform: capitalize;
        margin:0;
        padding:0;
        line-height: 20px;
        a {
            display: block;
            @include ellipsis-text(1);
            color: $product-name-color;
            font-size: $product-name-font-size;
            font-weight: $product-name-font-weight;
            &:hover{
                color: $product-name-hover-color;
            }
        }
    }
    //Price
    .product-price-and-shipping {
        color: $product-price-color;
        font-size: $product-price-font-size;
        font-weight: $product-price-font-weight;
        @include rtl-margin(10px,0,0,0);
        .aeuc_before_label{
            color: $product-price-color;
            font-size: 12px;
        }
        .aeuc_from_label{
            @include rtl-margin(0, 5px,0,0);
        }

        .price{
            @include rtl-margin(0, 5px,0,0);
        }
        .regular-price{
            color: $product-price-regular-color;
            text-decoration: line-through;
            @include rtl-margin(0, 5px,0,0);
            font-size: 16px;
            font-weight: 400;
            &+span.price{
                color: $product-price-regular-color;        
            }
        } 
    }
    .product-description-short {
        @include rtl-margin(10px,0,0,0);
        padding: 0;
        line-height: 20px;
    }
    .btn, .quickview {
        font-size: $product-button-font-size;
        i {
            font-size: $product-button-font-size;
        }
    }
    &:hover { 
        /* more img */
        .product-additional , .second-image-style {
            visibility: visible;
            @include opacity(1);
            transform: scale3d(1,1,1);
        }
        /*Multi Image Product List */
        .leo-more-info{
            width: 85px;
            @include opacity(1);
            @include rtl-right(-85px);
        }
    }
}

/* Product Style  */
.leo-plist-style {
    .thumbnail-container {
        .functional-buttons  {
            position: absolute;
            bottom: 15px;
            left: 15px;
            right: 15px;
            @include rtl-text-align-left();
            font-size: 0;
            transition: all .4s;
            @include display(flex);
            @include justify-content(flex-start);
            /*button */
            @include leo-button-2;

            @media (min-width: 992px) {
                @include opacity(0);
                visibility: hidden;
            }
            @media (max-width: 480px) {
                bottom: 30px;
            }    
        }
        .wr-price-reviews {
            @include display(flex);
            @include justify-content(space-between);
            .star {
                font-size: 14px;
                line-height: normal;
            }
            .nb-revews {
                display: none;
            }
        }
        &:hover {
            .functional-buttons {
               @include opacity(1);
               visibility: visible;
            }
        }
    }
}

/* Product Style 1  */
.leo-plist-style-1 {
    .thumbnail-container {
        margin: 0 0 30px;
        overflow: hidden;
        box-shadow: 0 0 0 1px #e5e5e5;
        .leo-wishlist-button-dropdown {
            .leo-list-wishlist {
                left: auto;
                @include rtl-right(0);
            }
        }
        .product-title{
            margin: 0 0 15px;
        }
        .slick-arrows {
            @media (max-width: 480px) {
               display: none;
            }
        }
        .product-meta {
            @include rtl-padding(15px,60px,15px,15px);
            @media (max-width: 480px) {
                @include rtl-padding(15px,60px,35px,15px);
            }
            background: rgba(255,255,255,0);
            background: -moz-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
            background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(255,255,255,0)), color-stop(100%, rgba(255,255,255,1)));
            background: -webkit-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
            background: -o-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
            background: -ms-linear-gradient(top, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
            background: linear-gradient(to bottom, rgba(255,255,255,0) 0%, rgba(255,255,255,1) 100%);
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#ffffff', GradientType=0 );
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            transition: all .4s ease;
            @media (min-width: 992px) {
                transform: translateY(100%);
            }
            .discount-percentage {
                position: static;
                margin: 0;
            }
        }
        .functional-buttons {
            bottom: 50%;
            position: absolute;
            left: auto;
            @include rtl-right(10px);
            padding: 0;
            transform: translateY(50%);
            z-index: 9;
            /*button */
            @include leo-button-2;
            @media (min-width: 992px) {
                @include opacity(0);
                visibility: hidden;
            }
            .btn-product,
            .quick-view {
                box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.2);
                margin: 10px 0;
                @media (min-width: 992px) {
                    transform: translateX(100%);
                }
                &.leo-wishlist-button{
                    transition-delay: 0.1s;
                }
                &.leo-compare-button{
                    transition-delay: 0.2s;
                }
                &.add-to-cart{
                    transition-delay: 0.3s;
                }
                span span {
                    bottom: auto;
                    left: initial;
                    top: 10px;
                    @include rtl-margin-right(10px);
                    transform: translateX(-10px);
                    @include rtl-right(100%);
                    @include border-radius(0);
                    &:before {
                        top:5px;
                        @include rtl-left(100%);
                        border: 5px solid transparent;
                        @include rtl-border-left(5px solid $product-button-hover-bg);
                        @include rtl-margin-left(0);
                    }
                }
            }
        }
        &:hover{
            .product-meta {
                @media (min-width: 992px) {
                    transform: translateY(0);
                }
            }
            .functional-buttons {
                @media (min-width: 992px) {
                    @include opacity(1);
                    visibility: visible;
                }
                .btn-product,
                .quick-view{
                    @media (min-width: 992px) {
                        transform: translateX(0);
                    }
                    span span {
                        transform: translateX(0);
                    }
                }
            }
        }
    }
}

