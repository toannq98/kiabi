/* Product Style 4  */
.leo-plist-style-4  {
    .thumbnail-container {
        margin-bottom: 30px;
        box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.05);
        transition: all .4s;
        &:hover{ 
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.2);
        }
        @media (max-width: 991px) {
            margin-bottom: 20px;
        }
        .product_attr {
            margin-top: 10px;
        }
        .slick-arrows {
            @media (max-width: 480px) {
               display: none;
            }
        }
        .functional-buttons {
            bottom: 50%;
            position: absolute;
            right: auto;
            @include rtl-left(10px);
            padding: 0;
            transform: translateY(50%);
            z-index: 9;
             /*button */
            @include leo-button-2;

            @media (min-width: 992px) {
                @include opacity(0);
                visibility: hidden;
            }
            .btn-product,
            .quick-view {
                margin: 10px 0;
                @media (min-width: 992px) {
                    transform: translateX(-100%);
                }
                span span {
                    bottom: auto;
                    right: initial;
                    top: 10px;
                    @include rtl-margin-left(10px);
                    transform: translateX(-10px);
                    @include rtl-left(100%);
                    @include border-radius(0);
                    &:before {
                        top:5px;
                        @include rtl-left(-10px);
                        border: 5px solid transparent;
                        @include rtl-border-right(5px solid $product-button-hover-bg);
                        @include rtl-margin-left(0);
                    }
                }
            }
        }
        .button-review {
            margin: 10px 0 0;
            .btn-product , .quick-view {
                width: 30px;
                height: 30px;
                line-height: 35px;
                text-align: center;
                padding: 0;
                position: relative;
                background: none;
                display: block;
                i {
                    display: inline-block;
                    font-size: 20px;
                }
                span span{
                    display: block;
                    position: absolute;
                    bottom: 100%;
                    right: 0;
                    margin-bottom: 10px;
                    padding: 0 10px;
                    border-radius: 7px;
                    line-height: 25px;
                    font-size: 10px;
                    text-transform: capitalize;
                    transition: all .4s;
                    background: #333;
                    color: #fff;
                    transform: translateY(10px);
                    opacity: 0;
                    visibility: hidden;
                    white-space: nowrap;
                    &:before {
                        content: "";
                        border: 5px solid transparent;
                        border-top-color: #333;
                        position: absolute;
                        top: 100%;
                        right: 10px;
                    }
                }
                &:hover{
                    span span{
                        transform: translateY(0px);
                        opacity: 1;
                        visibility: visible;
                    }
                }
            }
            .leo-list-product-reviews {
                padding: 12px 0 0 0;
                @include rtl-float-left();
                @include rtl-text-align-left();
                .nb-revews {
                    display: none;
                }
            }
            &>div:not(.leo-list-product-reviews){
                @include rtl-float-right();           
            }
            &:after {
              content: "";
              display: block;
              clear: both;
            }
        }
        .product-meta {
            padding: 20px 15px;
        }
        .leo-list-product-reviews {
            margin: 0;
            min-width: 100px
        }
        &:hover {
            .functional-buttons {
                @media (min-width: 992px) {
                    @include opacity(1);
                    visibility: visible;
                }
                .btn-product,
                .quick-view{
                    margin: 10px 0;
                    @media (min-width: 992px) {
                        transform: translateX(0);
                    }
                    span span {
                        transform: translateX(0);
                    }
                }
            }
        }
    }
}

/* Product Style 5  */
.leo-plist-style-5  {
    .thumbnail-container {
        .product-price-and-shipping {
            .discount-percentage {
                display: none;
            }
        }
        .product-meta {
            @include rtl-padding(10px,0,10px,0);
        }
        .slick-dots {
            bottom: -30px;
        }
        .product-flags {
            top:40px;
        }
        /* Count down */
        .leo-more-cdown{
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            ul {
                margin-bottom: 0;
                @include display(flex);
                @include align-items(center);
                @include justify-content(center);
                font-size: 18px;
                color: $white;
                height: 30px;
                background-color: $theme-color-default;
                @media (max-width: 991px) {
                    font-size: 15px;
                }
                li {
                    &:after {
                        content: ':';
                        margin: 0 7px;
                    }
                    &:last-child {
                        &:after {
                            display: none;
                        }
                    }
                    span {
                        display: none;
                    }
                }
            }
        }
        .wr-price-reviews  {
            @include display(flex);
            @include justify-content(space-between);
        }
        // add to cart
        .add-to-cart {
            position: absolute;
            bottom: 0;
            width: 100%;
            left: 0;
            right: 0;
            height: 35px;
            font-size: 12px;
            text-transform: uppercase;
            background-color: $black;
            color: $white;
            @media (min-width: 992px) {
                @include opacity(0);
                visibility: hidden;
                @include transition(all 0.5s);
                transform: translateY(100%);
            }
            .leo-bt-cart-content {
                display: inline-block;
            }
            &:hover {
                &:after {
                    @include rtl-padding-left(10px);
                    @include opacity(1);
                    visibility: visible;
                }
            }
            &:after {
                content: "\f101";
                font: normal normal normal 14px/1 $font-icon;
                display: inline-block;
                @include transition (all ease 0.35s);
                @include opacity(0);
                visibility: hidden;
            }
            &.active {
                &:after {
                    display: none;
                }
                .cssload-speeding-wheel {
                    border-left-color: $white;
                    border-right-color: $white;
                }
            }
        }
        .group-transition {
            display: inline-block;
            width: 100%;
            padding: 8px 0;
            border-bottom: $main-border;
            position: relative;
            @include display(flex);
            @include justify-content(space-between);
            margin-bottom: 10px;
            .wr-sale-stock {
                width: 65%;
                @include rtl-float-left();
                @include rtl-text-align-left();
                @media (max-width: 1499px) {
                    width: 60%;
                }
                .leo-sale {
                    line-height: 25px;
                    display: inline-block;
                    .discount-percentage {
                        position: static;
                    }
                    label{
                        @include rtl-margin(0px, 5px, 0px, 0px);
                        padding: 0px 7px;
                        background-color: $theme-color-default;
                        color: $white;
                        font-family: $headings-font-family;
                        font-size: 14px;
                        font-weight: 400;
                        text-transform: uppercase;
                    }
                }
                span {
                    line-height: 25px;
                    font-size: 13px;
                    @media (max-width: 1499px) {
                        font-size: 12px;
                    }
                }
            }
        }
        .functional-buttons{
            width: 35%;
            position: static;
            @include display(flex);
            @include justify-content(flex-end);
            @media (min-width: 992px) {
                @include transform(translateY(-100%));
                @include transition(all 0.5s ease-in-out);
                visibility: hidden;
                @include opacity(0);
            }
            @media (max-width: 1499px) {
                width: 40%;
            }
            .btn-product , .quick-view {
                width: 26px;
                height: 20px;
                line-height: 20px;
                text-align: center;
                background: transparent;
                padding: 0;
                border: 0;
                span span {
                    display: none;
                }
                i{
                    font-size: 16px;
                    color: $black;
                    @include transition(all 0.5s);
                }
                &:hover, &.added {
                    i {
                        color: $theme-color-default;
                    }
                }
            }

        }
        &:hover {
            @media (min-width: 992px) {
                // hover add to cart
                .add-to-cart {
                    @include transform(translateY(0));
                    @include opacity(1);
                    visibility: visible;
                }
                .functional-buttons{
                    visibility: visible;
                    @include opacity(1);
                    @include transform(translateY(0%));
                }
            }
        }

    }
}

/* Product Style 6  */
.leo-plist-style-6  {
    .thumbnail-container {
    .product-title {
            a {
                text-align: center;
            }
        }
