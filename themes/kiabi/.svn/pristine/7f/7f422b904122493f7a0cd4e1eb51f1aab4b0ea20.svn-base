/* Product Style 7  */
.leo-plist-style-7  {
    .thumbnail-container {
    
    .full_attribute {
            @media (min-width: 480px) {
                position: absolute;
                bottom: 10px;
                @include rtl-left(20px);
                display: none;
                padding: 10px;
            }
            @media (max-width: 480px) {
                margin-top: 10px;
            }
            @include transition(all 0.4s ease);
            .product_attr {
                li:not(.color){
                    position: relative;
                    a {
                        padding: 3px 8px;
                        border: 1px solid #000;
                        background: #fff;
                        &:hover {
                            border-color:$theme-color-default;
                        }
                    }
                    &.Sold-Out {
                        a {
                            border: 1px solid #969696;
                        }
                    }
                }
            }
        }

        .wr-sale-stock {
            position: absolute;
            top: 0;
            @include rtl-right(0);
            color: #000;
            &:before {
                content: "";
                top: 0;
                @include rtl-right(0);
                width: 0;
                height: 0;
                border-top: 70px solid black;
                @include rtl-border-left(70px solid transparent);
                position: absolute;
                z-index: 1;
            }
            .product-last-items {
                position: relative;
                z-index: 10000;
                color: #fff;
                @include rotate(45deg); 
                display: block;
                margin-top: 18px;
                text-transform: uppercase;
                font-size: 10px;
            }
        }
        .discount-percentage {
            display: none;
        }
        .wr-price-reviews {
            @include display(flex);
            @include justify-content(space-between);
            .star {
                font-size: 14px;
                line-height: normal;
            }
            .nb-revews {
                display: none;
            }
        }
        .functional-buttons {
            display: inline-block;
            width: 100%;
            @include rtl-text-align-right();
            margin-top: 10px;
            @media (min-width: 992px) {
                position: absolute;
                bottom: 0;
                top:inherit;
                 margin-top: 0;
                @include scale(0,1);
                @include opacity(0);
                visibility: hidden;
                @include translate3d(0,-20px,0);
                @include transition(all 0.4s cubic-bezier(0.44, 0.13, 0.48, 0.87));
            }
            &>div {
                display: inline-block;
                padding: 0;
                margin: 0;
                .btn-product, .quick-view {
                    color: $theme-color-tertiary;
                    padding: 0 5px;
                    background: transparent;
                    font-size: 10px;
                    i {
                        margin: 0;
                        font-size: 15px;
                    }
                    &:hover {
                        color:$theme-color-default;
                        i {
                            color: $theme-color-default;
                        }
                    }
                }
                .btn-product:not(.add-to-cart) , .quick-view {
                    span span {
                        display: none;
                    }
                }
                &.button-container {
                    @include rtl-float-left();
                    border-bottom: 1px solid $theme-color-tertiary;
                    .btn-product {
                        text-transform: uppercase;
                        font-size: 14px;
                    }
                    i {
                        display: none;
                    }
                }
            }
            
        }
        &:hover {
            .wr-price-reviews {
                @media (min-width: 992px) {
                    @include opacity(0);
                    visibility: hidden;
                }
            }
            .functional-buttons {
                 @media (min-width: 992px) {
                    @include opacity(1);
                    visibility:visible;
                    @include scale(1);
                }
            }
            .full_attribute  {
                display: block;
            }
        }
    }
}

/* Product Style 8  */
.leo-plist-style-8  {
    .thumbnail-container {
        @include box-shadow(0 2px 6px 0px rgba(0, 0, 0, 0.12));
        @include transition(all 0.3s ease);
        .product-meta {
            padding: 20px;
        }
        .functional-buttons {
            position: absolute;
            z-index: 100;
            background: #FFFFFF;
            padding: 3px 10px;
            text-align: center;
            bottom: 15px;
            @include rtl-right(25px);
            @media (min-width: 992px) {
                @include opacity(0);
                visibility: hidden;
                @include scale(0, 1);
                @include transition(all 0.5s ease);
            }
            .btn-product, .quick-view {
                position: relative;
                display: inline-block;
                height: 37px;
                line-height: 37px;
                width: 20px;
