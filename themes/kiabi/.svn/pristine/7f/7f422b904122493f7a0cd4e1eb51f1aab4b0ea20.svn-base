/* Product Style 3  */
.leo-plist-style-3 {
    .thumbnail-container {
        .functional-buttons {
            position: absolute;
            top:10px;
            @include rtl-right(10px);
            .leo-wishlist-button{
                padding: 0;
                border: 0;
                width: 24px;
                height: 24px;
                line-height: 24px;
                text-align: center;
                color: #444;
                background: none;
                overflow: hidden;
                &:hover,
                &:active,
                &:focus{
                    color: #000;
                    background: none;
                }
                i {
                    display: block;
                    width: 24px;
                    height: 24px;
                    line-height: 24px;
                    font-size: 0;
                    margin: 0;
                    &:before {
                        content: "\f08a";
                        font-family: 'FontAwesome';
                        font-size: 15px;
                    }
                    &:hover {
                        color:$theme-color-default;
                    }
                }
                .leo-wishlist-bt-content span{
                    display: none;
                }
            } 
            .leo-wishlist-button-dropdown{
                position: static;
                .leo-list-wishlist{
                    left: auto;
                    @include rtl-right(0);
                }
            }
        }
        .p-price{
            position: relative;
            @include rtl-padding(0, 40px ,0, 0);
            margin-top: 20px;
            .add-to-cart{
                position: absolute;
                top : 0;
                font-size: $product-button-font-size - 1px;
                background: transparent;
                color: $product-button-color;
                text-transform: uppercase;
                padding: 0;
                @media (min-width: 992px) {
                    @include rtl-left(0);
                    @include transform(translateX(-20px)); 
                    @include opacity(0);
                    visibility: hidden;
                    @include transition(all .3s .1s);
                }
                i {
                    display: none;
                }
            }
            .product-price-and-shipping{
                display: block;
                @include transition(all .3s .1s);
            }
            @media (max-width: 992px) {
                .add-to-cart{
                    @include rtl-right(0);
                    width: 24px;
                    height: 24px;
                    line-height: 24px;
                    text-align: center;
                    text-transform: uppercase;
                    .leo-bt-cart-content{
                        i {
                            display: block;
                            width: 24px;
                            height: 24px;
                            line-height: 24px;
                            text-align: center;
                            font-size: 0;   
                            &:before{
                                font-size: 16px; 
                            }                    
                        }
                        span{
                            display: none;
                        }
                    }
                }
            }
            .discount-percentage{
                @media (max-width: 992px) {
                    position: absolute;
                    top: 0;
                    @include rtl-right(0);
                }
                color:#f7525a;
            }
        }
        .p-name {
            position: relative;
            margin: 0 0 10px;
            @include rtl-padding(0,35px,0,0);
            .quick-view {
                position: absolute;
                top: 0;
                @include rtl-right(0);
                span span {
                    display: none;
                }
                i {
                    font-size: 18px;
                }
            }
        }
        &:hover {
            .p-price{
                .add-to-cart{  
                    @media (min-width: 992px) {
                        @include opacity(1);
                        visibility: visible;
                        @include transform(translateX(0)); 
                        &.disable{
                            @include opacity(0.5);
                        }
                    }
                }
                .product-price-and-shipping{
                    @media (min-width: 992px) {
                        @include opacity(0);
                        visibility: hidden;
                        @include transform(translateX(70px)); 
                    }
                }
            }
        }
    }
}

/* Type List leo-plist-style-3 */
.leo-plist-style-3.list {
    .thumbnail-container {
        .p-price {
            .add-to-cart {
                @include rtl-left(auto);
                @include rtl-right(0);
