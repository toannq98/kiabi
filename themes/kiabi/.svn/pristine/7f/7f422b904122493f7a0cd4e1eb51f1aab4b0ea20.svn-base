/*leo-plist-style-2-1 */
.leo-plist-style-2-1 {
    .thumbnail-container {
        .functional-buttons{
            @include display(flex);
            @media (min-width: 992px) {
                position: absolute;
                left: 0;
                right: 0;
                bottom: 0;
                opacity: 0;
                visibility: hidden;
                transition: all .4s;
                transform: translateY(100%);
