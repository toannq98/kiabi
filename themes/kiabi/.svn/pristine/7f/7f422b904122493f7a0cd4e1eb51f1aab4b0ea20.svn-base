                    transition: all .4s;
                    @include opacity(0);
                    visibility: hidden;
                    line-height: 15px;
                    white-space: nowrap;
                    text-transform: uppercase;
                    letter-spacing: 1px;
                    font-weight: 300;
                    &:before {
                        position: absolute;
                        @include rtl-left(100%);
                        content:"";
                        top:5px;
                        @include rtl-left(100%);
                        border: 5px solid transparent;
                        @include rtl-border-left(5px solid $product-button-hover-bg);
                        @include rtl-margin-left(0);
                    }
                }
                i {
                    @include rtl-margin-right(0);
                }
                &:hover {
                    i {
                        color: $theme-color-default;
                    }
					span span{
                        @include opacity(1);
                        visibility: visible;
                        transform: translateX(0);
