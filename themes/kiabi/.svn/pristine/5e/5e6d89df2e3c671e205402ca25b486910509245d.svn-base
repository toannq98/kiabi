@import "theme_variables";
@import "bootstrap/rtl/_bootstrap-rtl";

*[dir="rtl"]{
// PRODUCT ITEM
.product_block{
    &.last_item{
        .thumbnail-container{
        	.leo-more-info{
                left: auto;
                right: 0px;
            }
            &:hover{
                .leo-more-info{
                    left: auto;
                    right: -90px;
                }
            }
        }       
    }
}
